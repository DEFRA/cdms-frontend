{% extends 'layouts/page.njk' %}

{% block content %}
  {{ appHeading({
    text: heading,
    caption: "Providing insights into the current state of the CDMS data."
  }) }}


<div class="govuk-body" data-testid="app-page-body">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
      <canvas id="lastMonthImportNotificationsByTypeAndStatus"></canvas>
    </div>
    <div class="govuk-grid-column-one-third">
      <canvas id="lastMonthMovementsByStatus"></canvas>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
      <canvas id="last7DaysImportNotificationsLinkingStatus"></canvas>
    </div>
    <div class="govuk-grid-column-one-third">
      <canvas id="last24HoursImportNotificationsLinkingStatus"></canvas>
    </div>
  </div>
  <hr class="govuk-section-break govuk-grid-column-two-thirds govuk-section-break--l govuk-section-break--visible"/>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div><canvas id="last24HoursMovementsLinkingByCreated"></canvas></div>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div><canvas id="last24HoursImportNotificationsLinkingByCreated"></canvas></div>
    </div>
  </div>

  <hr class="govuk-section-break govuk-grid-column-two-thirds govuk-section-break--l govuk-section-break--visible"/>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div><canvas id="importNotificationsLinkingByCreated"></canvas></div>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div><canvas id="importNotificationsLinkingByArrival"></canvas></div>
    </div>
  </div>
  <hr class="govuk-section-break govuk-grid-column-two-thirds govuk-section-break--l govuk-section-break--visible"/>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div><canvas id="movementsLinkingByCreated"></canvas></div>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div><canvas id="movementsLinkingByArrival"></canvas></div>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div><canvas id="lastMonthMovementsByItemCount"></canvas></div>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div><canvas id="lastMonthMovementsByUniqueDocumentReferenceCount"></canvas></div>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div><canvas id="lastMonthImportNotificationsByCommodityCount"></canvas></div>
    </div>
  </div>
  <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        <canvas id="lastMonthUniqueDocumentReferenceByMovementCount"></canvas>
      </div>
      <div class="govuk-grid-column-one-third">
        <canvas id="todo"></canvas>
      </div>
    </div>
</div>

{% endblock %}
